<h1>投稿詳細ページ</h1>
<h3><%= @micropost.user.name %></h3>
<h3><%= @micropost.user.email %></h3>
<h3><%= @micropost.content %></h3>
<%= image_tag @micropost.img.url if @micropost.img?%>

<h2>コメント一覧</h2>

<%@comments.each do |c| %>
  <div>
    
    <a href="/users/<%= @micropost.user.id %>"><%= c.user.email %></a>
    <%= c.content %>
    <hr>
  </div>
<% end %>

<%= form_for [@micropost, @comment] do |f| %>
  <%= f.text_field :content %>
  <br>
  <%= f.submit 'コメントする' %>
<% end %>

<%= link_to "ホームへ戻る", root_path %>
